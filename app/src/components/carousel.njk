<section class="carousel" aria-label="carousel with cards">
  <p class="sr-only">This is a carousel with cards that activate modal dialogs. Use the previous and next buttons to navigate.</p>

  <!-- Previous button -->
  <button class="button is-control previous-button">
    <span class="fas fa-angle-left" aria-hidden="true"></span>
    <span class="sr-only">Previous cards</span>
  </button>

  <!-- Slide content -->
  <div class="cards">
    <button class="card">
      <div class="sr-only">card 1 of 2,</div>
      <img src="https://picsum.photos/300" alt="lorem">
    </button>

    <button class="card">
      <div class="sr-only">card 2 of 2,</div>
      <img src="https://picsum.photos/300" alt="lorem">
    </button>
  </div>

  <!-- Next button -->
  <button class="button is-control next-button">
    <span class="fas fa-angle-right" aria-hidden="true"></span>
    <span class="sr-only">Next cards</span>
  </button>
</section>


