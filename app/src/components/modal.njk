<section data-component="Modal">
  <div class="container">
    <div class="grid">
      <div class="g-col-12 g-col-900-8 g-start-900-3">
        <h2>Modal</h2>
        <button class="js-btn-open">Open the modal</button>
      </div>
    </div>
  </div>
  <div class="modal js-modal">
    <div class="modal-dialog js-modal-dialog" role="dialog" aria-modal="true" aria-labelledby="modal-heading">
      <button class="js-btn-close first-focusable-element">
        {# <span class="fas fa-times" aria-hidden="true"></span> #}
        {# <span class="sr-only">Close</span> #}
      Close
      </button><h1 id="modal-heading">Modal Title</h1>
      <p>Press Tab key to see how focus works in Modal</p>
      <div class="buttons">
        <button class="js-btn-cancel">Cancel</button>
        <button class="js-btn-ok last-focusable-element">OK</button>
      </div>
    </div>
  </div>
</section>
